generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}


model Service {
  id           String        @id @default(cuid())
  name         String
  durationMin  Int
  price        Int
  active       Boolean       @default(true)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  reservations Reservation[]
}

model Staff {
  id             String         @id @default(cuid())
  name           String
  bio            String?
  phone          String?        @unique
  email          String?        @unique
  role           String?
  skills         String?
  avatarUrl      String?
  employmentType EmploymentType @default(FULLTIME)
  baseSalary     Int?
  commission     Float?
  active         Boolean        @default(true)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  reservations   Reservation[]
}

model User {
  id            String         @id @default(cuid())
  phone         String         @unique
  name          String?
  city          String?
  verifiedAt    DateTime?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  notifications Notification[]
  reservations  Reservation[]
  testimonials  Testimonial[]

  @@index([phone])
}

model Reservation {
  id        String            @id @default(cuid())
  serviceId String
  staffId   String
  userId    String
  startsAt  DateTime
  endsAt    DateTime
  status    ReservationStatus @default(PENDING)
  notes     String?
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
  service   Service           @relation(fields: [serviceId], references: [id])
  staff     Staff             @relation(fields: [staffId], references: [id])
  user      User              @relation(fields: [userId], references: [id])

  @@index([serviceId])
  @@index([staffId])
  @@index([userId])
  @@index([status, createdAt])
}

model GalleryItem {
  id          String   @id @default(cuid())
  title       String
  description String?
  style       String?
  imageUrl    String   // مسیر عکس (استاتیک یا Supabase)
  tags        String?
  source      String   @default("supabase") // "supabase" یا "static"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}


model Admin {
  id               Int       @id @default(autoincrement())
  email            String    @unique
  password         String
  provider         String?
  resetToken       String?
  resetTokenExpiry DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

model HomeContent {
  id        String   @id @default(cuid())
  title     String
  text      String?
  imageUrl  String?
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([order, createdAt])
}

model SiteContent {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Testimonial {
  id        String            @id @default(cuid())
  name      String
  text      String
  status    TestimonialStatus @default(PENDING)
  userId    String?
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
  user      User?             @relation(fields: [userId], references: [id])

  @@index([status, createdAt])
}

model OTP {
  phone     String   @id
  code      String
  expiresAt DateTime
  tries     Int      @default(0)
  createdAt DateTime @default(now())
}

model Notification {
  id        String   @id @default(cuid())
  title     String
  message   String
  userId    String?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])
}

enum EmploymentType {
  FULLTIME
  PARTTIME
  REMOTE
  CONTRACT
  COMMISSION_ONLY
}

enum ReservationStatus {
  PENDING
  CONFIRMED
  CANCELED
  COMPLETED
}

enum TestimonialStatus {
  PENDING
  APPROVED
  REJECTED
}
