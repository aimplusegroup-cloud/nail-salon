// ---------------------- GENERATOR ----------------------
generator client {
  provider = "prisma-client-js"
}

// ---------------------- DATASOURCE ----------------------
datasource db {
  provider = "postgresql"   // ✅ تغییر به Postgres برای دیپلوی ابری
  url      = env("DATABASE_URL")
}

// ---------------------- MODELS ----------------------

// خدمات
model Service {
  id           String        @id @default(cuid())
  name         String
  durationMin  Int
  price        Int
  active       Boolean       @default(true)
  reservations Reservation[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

// پرسنل
model Staff {
  id             String          @id @default(cuid())
  name           String
  bio            String?
  phone          String?         @unique
  email          String?         @unique
  role           String?
  skills         String?
  avatarUrl      String?
  employmentType EmploymentType  @default(FULLTIME)
  baseSalary     Int?
  commission     Float?
  active         Boolean         @default(true)
  reservations   Reservation[]
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}

enum EmploymentType {
  FULLTIME
  PARTTIME
  REMOTE
  CONTRACT
  COMMISSION_ONLY
}

// کاربر سایت
model User {
  id            String        @id @default(cuid())
  phone         String        @unique
  name          String?
  city          String?
  verifiedAt    DateTime?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  reservations  Reservation[]
  testimonials  Testimonial[]
  notifications Notification[]

  @@index([phone])
}

// رزرو
model Reservation {
  id          String            @id @default(cuid())
  service     Service           @relation(fields: [serviceId], references: [id])
  serviceId   String
  staff       Staff             @relation(fields: [staffId], references: [id])
  staffId     String
  user        User              @relation(fields: [userId], references: [id])
  userId      String
  startsAt    DateTime          // ✅ تغییر از String به DateTime
  endsAt      DateTime          // ✅ تغییر از String به DateTime
  status      ReservationStatus @default(PENDING)
  notes       String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  @@index([serviceId])
  @@index([staffId])
  @@index([userId])
  @@index([status, createdAt])
}

enum ReservationStatus {
  PENDING
  CONFIRMED
  CANCELED
  COMPLETED
}

// آیتم‌های گالری
model GalleryItem {
  id          String   @id @default(cuid())
  title       String
  description String?
  style       String?
  imageUrl    String
  tags        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// مدیر سیستم
model Admin {
  id               Int       @id @default(autoincrement())
  email            String    @unique
  password         String
  provider         String?   // ورود با گوگل یا سایر روش‌ها
  resetToken       String?
  resetTokenExpiry DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

// محتوای صفحه اصلی
model HomeContent {
  id        String   @id @default(cuid())
  title     String
  text      String?
  imageUrl  String?
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([order, createdAt])
}

// محتوای متنی سایت
model SiteContent {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// نظرات کاربران
model Testimonial {
  id        String            @id @default(cuid())
  name      String
  text      String
  status    TestimonialStatus @default(PENDING)
  user      User?             @relation(fields: [userId], references: [id])
  userId    String?
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt

  @@index([status, createdAt])
}

enum TestimonialStatus {
  PENDING
  APPROVED
  REJECTED
}

// کدهای OTP
model OTP {
  phone     String   @id
  code      String
  expiresAt DateTime
  tries     Int      @default(0)
  createdAt DateTime @default(now())
}

// نوتیفیکیشن‌ها
model Notification {
  id        String   @id @default(cuid())
  title     String
  message   String
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}
