// ---------------------- MODELS ----------------------

// Ø®Ø¯Ù…Ø§Øª
model Service {
  id           String        @id @default(cuid())
  name         String
  durationMin  Int
  price        Int
  active       Boolean       @default(true)
  reservations Reservation[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

// Ù¾Ø±Ø³Ù†Ù„
model Staff {
  id             String          @id @default(cuid())
  name           String
  bio            String?
  phone          String?         @unique
  email          String?         @unique
  role           String?
  skills         String?
  avatarUrl      String?
  employmentType EmploymentType  @default(FULLTIME)
  baseSalary     Int?
  commission     Float?
  active         Boolean         @default(true)
  reservations   Reservation[]
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}

enum EmploymentType {
  FULLTIME
  PARTTIME
  REMOTE
  CONTRACT
  COMMISSION_ONLY
}

// Ú©Ø§Ø±Ø¨Ø± Ø³Ø§ÛŒØª (Ø«Ø¨Øªâ€ŒÙ†Ø§Ù… Ø¨Ø§ Ø´Ù…Ø§Ø±Ù‡ + OTP)
model User {
  id            String        @id @default(cuid())
  phone         String        @unique
  name          String?
  city          String?
  verifiedAt    DateTime?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  reservations  Reservation[]
  testimonials  Testimonial[]
  notifications Notification[]

  @@index([phone])
}

// Ø±Ø²Ø±Ùˆ
model Reservation {
  id          String            @id @default(cuid())
  service     Service           @relation(fields: [serviceId], references: [id])
  serviceId   String
  staff       Staff             @relation(fields: [staffId], references: [id])
  staffId     String
  user        User              @relation(fields: [userId], references: [id])
  userId      String
  startsAt    String
  endsAt      String
  status      ReservationStatus @default(PENDING)
  notes       String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  @@index([serviceId])
  @@index([staffId])
  @@index([userId])
  @@index([status, createdAt])
}

enum ReservationStatus {
  PENDING
  CONFIRMED
  CANCELED
  COMPLETED
}

